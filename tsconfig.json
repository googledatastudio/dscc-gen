{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es6"],
    "strict": true,
    "types": ["node", "jest"]
  },
  "include": [
    "./src/**/*"
  ],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}
